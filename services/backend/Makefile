help:
	@echo "Displaying help information..."
	@grep -E '^[.a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

clean: ## Cleaning autogenerated files
	@echo "Cleaning autogenerated files..."
	rm -rf dist
	find . -type f -name "*.DS_Store" -delete
	find . | grep -E "(__pycache__|\.pyc|\.pyo)" | xargs rm -rf
	find . | grep -E ".pytest_cache" | xargs rm -rf
	find . | grep -E ".ipynb_checkpoints" | xargs rm -rf
	rm -f .coverage


clean-logs: ## Cleaning log files
	@echo "Cleaning log files..."
	rm -rf logs/**

format: ## Running pre-commit hooks
	@echo "Running pre-commit hooks..."
	pre-commit run -a

sync: ## Syncing with main branch
	@echo "Syncing with main branch..."
	git pull
	git pull origin main

test: ## Running tests
	@echo "Running tests..."
	poetry run python -m pytest

serve: ## Serving the app locally
	@echo "Serving the app..."
	poetry run python src/main.py